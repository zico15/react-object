{
  "exclude": ["./example/"],
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    "target": "ESNext",
    "allowJs": false,
    "checkJs": false,
    "pretty": true,
    "newLine": "lf",
    "lib": ["ESNext", "DOM"]
  }
}
